# ==========================================
# OCOBO Environment Variables Sample File
# ==========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit your .env file to version control

# ==========================================
# Node Environment
# ==========================================
# Options: development, production, test
NODE_ENV=development

# ==========================================
# GitHub Configuration (REQUIRED)
# ==========================================
# These variables are required for fetching content from GitHub
# Generate a personal access token at: https://github.com/settings/tokens

# Your GitHub account/organization name
GITHUB_ACCOUNT=your-github-account

# Your GitHub repository name where content is stored
GITHUB_REPO=your-content-repo

# GitHub Personal Access Token with repo read permissions
GITHUB_ACCESS_TOKEN=ghp_your_github_token_here

# ==========================================
# Content Source (OPTIONAL - Development Only)
# ==========================================
# Determines where to fetch content in development mode
# Options: 'locale' (local filesystem) or 'github' (GitHub API)
# Default: 'locale'
# In production, content is always fetched from GitHub
CONTENT_SOURCE=locale

# ==========================================
# Analytics & Tracking (OPTIONAL)
# ==========================================
# Google Analytics 4 Measurement ID
# Format: G-XXXXXXXXXX
GA_TRACKING_ID=

# Force load tracking scripts even in development
# Options: 'true' or 'false'
# Default: false (tracking only loads in production)
SHOULD_LOAD_TRACKING_SCRIPTS=false

# ==========================================
# Vercel Blob Storage (OPTIONAL)
# ==========================================
# Required only if using Vercel Blob for asset storage
# Get this from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=
